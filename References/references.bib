  Author                   = {Xie, Yu and Naguib, Michael and Mochalin, Vadym N. and Barsoum, Michel W. and Gogotsi, Yury and Yu, Xiqian and Nam, Kyung-Wan and Yang, Xiao-Qing and Kolesnikov, Alexander I. and Kent, Paul R. C.},
  Year                     = {2014},
