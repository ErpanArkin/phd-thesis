@Article{Aierken2016.mobility,
  Title                    = {Strain enhancement of acoustic phonon limited mobility in monolayer TiS3},
  Author                   = {Aierken, Yierpan and \c{C}ak{\i}r, Deniz and Peeters, Fran{\c c}ois M.},
  Year                     = {2016},
  Doi                      = {10.1039/C6CP01809B},
  Issue                    = {21},
  Pages                    = {14434--14441},
  Volume                   = {18},

  Abstract                 = {Strain engineering is an effective way to tune the intrinsic properties of a material. Here{,} we show by using first-principles calculations that both uniaxial and biaxial tensile strain applied to monolayer TiS3 are able to significantly modify its intrinsic mobility. From the elastic modulus and the phonon dispersion relation we determine the tensile strain range where structure dynamical stability of the monolayer is guaranteed. Within this region{,} we find more than one order of enhancement of the acoustic phonon limited mobility at 300 K (100 K){,} i.e. from 1.71 [times] 104 (5.13 [times] 104) cm2 V-1 s-1 to 5.53 [times] 105 (1.66 [times] 106) cm2 V-1 s-1. The degree of anisotropy in both mobility and effective mass can be tuned by using tensile strain. Furthermore{,} we can either increase or decrease the band gap of TiS3 monolayer by applying strain along different crystal directions. This property allows us to use TiS3 not only in electronic but also in optical applications.},
  Journal                  = {Phys. Chem. Chem. Phys.},
  Keywords                 = {own},
  Publisher                = {The Royal Society of Chemistry}
}

